    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
      body {
    font-family: 'Montserrat', Arial, sans-serif;
    background: linear-gradient(120deg, #6a11cb 0%, #2575fc 100%);
    color: #fff;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}
header {
    padding: 2rem 0 1rem 0;
    text-align: center;
}
h1 {
    font-size: 2.8rem;
    margin-bottom: 0.5rem;
    letter-spacing: 2px;
}
p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
}
/* Aangepaste MAIN styling voor centrering en max-width */
main {
    flex: 1;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center; /* Centraal de content horizontaal binnen main */
    width: 100%; /* Neemt de volle breedte van de parent */
    max-width: 1400px; /* Maximale breedte voor je content */
    margin: 0 auto; /* Centraal de main container zelf */
    box-sizing: border-box; /* Zorgt dat padding binnen de breedte blijft */
}
footer {
    text-align: center;
    padding: 1rem 0;
    font-size: 0.95rem;
    opacity: 0.8;
    margin-top: auto;
}
        /* Styling voor navigatie (indien aanwezig in main.ejs of hier) */
        .cta-btn {
            background: #fff;
            color: #2575fc;
            padding: 1rem 2.5rem;
            border: none;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            transition: background 0.2s, color 0.2s;
            text-decoration: none; /* Zorg dat het eruitziet als een knop, niet als een link */
            display: inline-block; /* Zodat padding werkt */
            margin: 0.5rem; /* Ruimte tussen de knoppen */
        }
        .cta-btn:hover {
            background: #2575fc;
            color: #fff;
        }
        .category-buttons {
            display: flex;
            flex-wrap: wrap; /* Zodat knoppen op nieuwe regel komen op kleine schermen */
            justify-content: center;
            gap: 15px; /* Ruimte tussen knoppen */
            margin-top: 2rem;
        }
        nav {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 10px 0;
    text-align: center;
    margin-bottom: 20px;
    width: 100%;
    /* Zorg dat de nav ook centraal staat als main een max-width heeft */
    max-width: 1400px; /* Match met main max-width */
    margin: 0 auto; /* Centraal de nav */
    box-sizing: border-box; /* Zorgt dat padding binnen de breedte blijft */
    
}
nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}
nav ul li {
    margin: 0 15px;
}
nav ul li a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 5px;
    transition: background-color 0.2s;
}
nav ul li a:hover, nav ul li a.active {
    background-color: rgba(255, 255, 255, 0.2);
}

/* VERBETERDE STIJL VOOR MENU ITEMS GRID */
.menu-grid {
    display: grid;
    /* Gebruik minmax om de items mooi te verdelen.
       De 1fr zorgt ervoor dat ze de resterende ruimte vullen.
       Pas de 'min' waarde (bijv. 280px) aan je voorkeur aan voor de kleinste kaartbreedte. */
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px; /* Ruimte tussen de vakjes */
    width: 100%; /* Zorgt ervoor dat de grid de volle breedte van de parent (.main) inneemt */
    /* Geen max-width hier, want de main container heeft al een max-width */
    margin-top: 20px;
    justify-content: center; /* Centraal de grid items binnen de grid container */
    /* Voorbeeld: als er maar 2 items zijn en de grid 3 kolommen zou kunnen hebben,
       zorgt dit ervoor dat ze centraal komen. */
}

.menu-item {
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    height: 100%; /* Zorg dat alle items in dezelfde rij dezelfde hoogte hebben */
}

.menu-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
}

.menu-item img {
    max-width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 15px;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.menu-item h2 {
    font-size: 1.8rem;
    margin-bottom: 5px;
    color: #FFD700;
}

.menu-item .price {
    font-size: 1.5rem;
    font-weight: bold;
    color: #A0EEA0;
    margin-bottom: 10px;
}

.menu-item p.description {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 15px;
    flex-grow: 1; /* Zorgt dat beschrijving de beschikbare ruimte inneemt */
}

.menu-item .options {
    width: 100%;
    text-align: left;
    margin-top: 10px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 10px;
}
.menu-item .options h3 {
    font-size: 1.1rem;
    margin-top: 0;
    margin-bottom: 8px;
    color: #FFD700;
}
.menu-item .options ul {
    list-style: none;
    padding: 0;
    margin: 0;
}
.menu-item .options li {
    font-size: 0.9rem;
    margin-bottom: 3px;
    color: rgba(255, 255, 255, 0.8);
}
.menu-item .options li span.price-change {
    font-weight: bold;
    color: #A0EEA0;
    margin-left: 5px;
}
    </style>

        <h1><%= title %></h1>
        <p><%= introText %></p>
   

    
        
            <a href="/" class="<%= (typeof title !== 'undefined' && title === 'Frietkot Beheersysteem') ? 'active' : '' %>">Home</a>
    <div class="category-buttons">
            <% if (categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <a href="/categorie/<%= category.name.toLowerCase() %>" class="cta-btn">
                        Bekijk <%= category.name %>
                    </a>
                <% }) %>
            <% } else { %>
                <p>Geen categorieën gevonden.</p>
            <% } %>
        </div>
    
 

    
        <div class="menu-grid">
             <% if (products && products.length > 0) { %>  
        <% products.forEach(item => { %>           
                    <div class="menu-item">
                        <% if (item.imageUrl) { %>
                            <img src="<%= item.imageUrl %>" alt="<%= item.name %>">
                        <% } else { %>
                            <img src="/img/placeholder.webp" alt="Geen afbeelding beschikbaar">
                        <% } %>
                        <h2><%= item.name %></h2>
                        <span class="price">€ <%= item.price.toFixed(2) %></span>
                        <% if (item.description) { %>
                            <p class="description"><%= item.description %></p>
                        <% } %>
                        <% if (item.options && item.options.length > 0) { %>
                            <div class="options">
                                <h3>Beschikbare Opties:</h3>
                                <ul>
                                    <% item.options.forEach(option => { %>
                                        <li>
                                            <%= option.name %>:
                                            <% option.choices.forEach(choice => { %>
                                                <%= choice.label %>
                                                <% if (choice.price_change && choice.price_change !== 0) { %>
                                                    <span class="price-change">(€ <%= choice.price_change.toFixed(2) %>)</span>
                                                <% } %>
                                            <% }); %>
                                        </li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Geen items gevonden in deze categorie.</p>
            <% } %>
        </div>
   

   
